

<MainWindow>:
	treeDisplay: td
	treeLabel: texte
	orientation: "horizontal"
	RelativeLayout:
		TreeDisplay:
			id: td
			nodeClick: texte
			pos: (self.parent.width-self.width)/2, (self.parent.height-self.height)/2
			size_hint: None, None
			size: 0.7 * 800, 0.7 * 600
			on_treeChange: texte.updateTree()
			
		# DEBUG LABEL
		# Label:
		# 	pos: (0, 0)
		# 	text: str(td.ctrlHeld)
		
	BoxLayout:
		orientation: 'vertical'
		size_hint_x: 0.7
		BoxLayout:
			size_hint_y: 0.1
			orientation: 'horizontal'
			Spinner:
				text: "QTree"
				values: ("QTree", "Tikz-QTree", "Forest", "Haskell")
				on_text: texte.changeTransducer(args[1])
				size_hint_x: 1.5
			Button: # CLEAR BUTTON
				text: "C"
				on_press: td.clearLabels()
		TreeInput:
			id: texte
			multiline: False
			on_text: td.displayChange = not td.displayChange
			on_text_validate: self.copy(self.text)

