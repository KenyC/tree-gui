

<MainWindow>:
	orientation: "horizontal"
	RelativeLayout:
		TreeDisplay:
			id: td
			pos: (self.parent.width-self.width)/2, (self.parent.height-self.height)/2
			size_hint: None, None
			size: 0.7 * 800, 0.7 * 600
			on_treeChange: texte.updateTree()
		# Label:
		# 	pos: (0, 0)
		# 	on_touch_down: self.text = str(args[1].pos)
		

	TreeInput:
		id: texte
		size_hint_x: 0.7
		multiline: False
		on_text: td.displayChange = not td.displayChange
		on_text_validate: self.copy(self.text)

